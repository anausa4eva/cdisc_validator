{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./build",
    "skipLibCheck": true,
    "paths": {
        "@pages": ["src/renderer/pages/index"],
        "@style": ["src/renderer/style/index"],
        "@components": ["src/renderer/components/index"],
        "@constants": ["src/renderer/constants/index"],
        "@types": ["src/renderer/types/index"],
        "@ui-kit": ["src/renderer/ui-kit/index"],
        "@redux": ["src/renderer/redux/index"],
        "@hooks": ["src/renderer/hooks/index"],
        "@utils": ["src/renderer/utils/index"],
        "@connectors": ["src/renderer/connectors/index"],
        "@common": ["src/common/index"],
        "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
    }
  }
}
